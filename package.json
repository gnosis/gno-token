{
  "name": "@gnosis.pm/gno-token",
  "version": "0.3.0",
  "description": "The GNO token and related smart contracts",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gnosis/gno-token/issues"
  },
  "homepage": "https://github.com/gnosis/gno-token#readme",
  "directories": {
    "lib": "contracts",
    "test": "test"
  },
  "scripts": {
    "rpc": "ganache-cli -d --mnemonic 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --defaultBalanceEther '500'",
    "prepack": "npm run restore",
    "test": "truffle test",
    "truffle": "truffle",
    "networks-extract": "node src/extract_network_info.js",
    "networks-inject": "node src/inject_network_info.js",
    "networks-reset": "mkdir -p build/contracts && truffle networks --clean && npm run networks-inject",
    "networks": "truffle networks",
    "compile-legacy": "node src/compileLegacyGNO.js",
    "compile": "eslint --fix . && eslint . && truffle compile && npm run compile-legacy",
    "restore": "npm run compile && npm run networks-reset",
    "postinstall": "npm install @gnosis.pm/util-contracts truffle-hdwallet-provider",
    "migrate-dep": "cd node_modules/@gnosis.pm/util-contracts && npm run migrate",
    "migrate": "truffle migrate",
    "lint": "eslint ."
  },
  "dependencies": {
    "@gnosis.pm/util-contracts": "^0.2.10"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "ganache-cli": "^6.1.0",
    "truffle": "4.1.5",
    "truffle-contract": "^3.0.5",
    "truffle-flattener": "^1.2.5",
    "truffle-hdwallet-provider": "^0.0.5"
  }
}
